<h1>Rails Movie App</h1>

<% @movies.each do |movie| %>

  <!-- <a href="/movies/<%#= movie['imdbID'] %>"><%#= movie["Title"] %></a> - <%#= movie["Year"] %></br> -->

  <%= link_to movie["title"], movie_path(movie['imdbID']) %> - <%= movie["year"] %></br>

  <%= button_to "delete", {controller: :movies, action: :destroy, id: movie["imdbID"] }, :method => :delete %>
  <%= button_to "edit", {controller: :movies, action: :edit, id: movie["imdbID"] }, :method => :get %>

  <br>

<% end %>
<br>
<%= link_to 'Add Movie to DB', new_movie_path %>
<br>
<br>


<div class="container">

	<p>Search for matching movies and add them to database</p>

	<form class="form-inline" role="form" action="/result" method="post">
	  <div class="form-group">
	    <label class="sr-only" for="movie">Movie:</label>
	    <input type="text" class="form-control" id="movie" name="movie" placeholder="Enter movie title">
	  </div>
	  
	  <button name="commit" type="submit" class="btn btn-default" style="background-color:green; color: white;">Search</button>
	</form>

</div>
